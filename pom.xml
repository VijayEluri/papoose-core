<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.papoose</groupId>
        <artifactId>papoose-root</artifactId>
        <version>1.1.1</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.papoose.core</groupId>
    <artifactId>papoose-core</artifactId>
    <name>Papoose :: Core</name>
    <version>1.0.0.SNAPSHOT</version>
    <packaging>pom</packaging>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
        </license>
    </licenses>

    <modules>
        <module>cnd-perm-admin</module>
        <module>framework</module>
        <module>perm-admin</module>
        <module>pkg-admin</module>
        <module>start-level</module>
        <module>store</module>
        <module>url-handlers</module>
    </modules>

    <properties>
        <papooseVersion>1.0.0.SNAPSHOT</papooseVersion>
    </properties>

    <build>
        <defaultGoal>install</defaultGoal>
    </build>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.4</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>net.jcip</groupId>
                <artifactId>jcip-annotations</artifactId>
                <version>1.0</version>
            </dependency>

            <dependency>
                <groupId>org.apache.xbean</groupId>
                <artifactId>xbean-classloader</artifactId>
                <version>3.3</version>
            </dependency>

            <dependency>
                <groupId>org.livetribe</groupId>
                <artifactId>livetribe-util</artifactId>
                <version>1.0.0</version>
            </dependency>

            <dependency>
                <groupId>org.papoose.osgi</groupId>
                <artifactId>OSGi_R4_v4.1_core_spec</artifactId>
                <version>4.1.0.build-200702212030</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>org.papoose.core</groupId>
                <artifactId>framework</artifactId>
                <version>${papooseVersion}</version>
            </dependency>

            <dependency>
                <groupId>org.papoose.test-support</groupId>
                <artifactId>test-support-bundle</artifactId>
                <version>${papooseVersion}</version>
                <scope>test</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <dependencies>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>

    </dependencies>


    <repositories>
        <repository>
            <id>papoose-dist-m2-snapshots</id>
            <url>http://oss.sonatype.org/content/repositories/papoose-snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>papoose-dist-m2-snapshots</id>
            <url>http://oss.sonatype.org/content/repositories/papoose-snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <scm>
        <connection>scm:svn:http://osgi.svn.sourceforge.net/svnroot/osgi/osgi-R4-spec/trunk</connection>
        <developerConnection>scm:svn:https://osgi.svn.sourceforge.net/svnroot/osgi/osgi-R4-spec/trunk</developerConnection>
        <url>https://osgi.svn.sourceforge.net/svnroot/osgi/osgi-R4-spec/trunk</url>
    </scm>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <aggregate>true</aggregate>
                    <javadocDirectory>${basedir}/src/main/javadoc</javadocDirectory>
                    <docfilessubdirs>true</docfilessubdirs>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <profiles>

        <!-- testing profile -->
        <profile>
            <id>tck</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>env-test</name>
                </property>
            </activation>
            <modules>
                <module>test-support</module>
                <module>tck</module>
            </modules>
        </profile>

    </profiles>

</project>

